{
    "manifest_version": 3,
    "name": "WebStyler",
    "description": "Chrome web-styler designed to make pages more readable",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["injected-css.js"]
      }
    ]
}
